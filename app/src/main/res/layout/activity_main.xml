<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/username_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textUsername"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/main_activity_text_hello"
            android:textColor="@color/colorText"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="@id/buttonAutho" />

        <ImageButton
            android:id="@+id/buttonAutho"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@color/colorPrimary"
            android:onClick="processButtonPressing"
            app:srcCompat="@drawable/ic_logout_2" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollModes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="28dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonCatchBot"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/round_buttons"
                android:enabled="false"
                android:onClick="processButtonPressing"
                android:text="@string/main_activity_button_catch_bot"
                android:textSize="16sp" />

            <!--<Button-->
            <!--android:id="@+id/button4"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="64dp"-->
            <!--android:layout_marginTop="18dp"-->
            <!--android:background="@drawable/round_buttons"-->
            <!--android:enabled="true"-->
            <!--android:onClick="processButtonPressing"-->
            <!--android:text="@string/main_activity_button_seek_coins"-->
            <!--android:textSize="16sp" />-->

            <Button
                android:id="@+id/buttonWithFriends"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/round_buttons"
                android:enabled="false"
                android:onClick="processButtonPressing"
                android:text="@string/main_activity_button_game_friends"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/buttonsForLayout"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/buttonStatistics"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_linear_layout"
            android:contentDescription="@string/main_activity_button_stat_description"
            android:enabled="false"
            android:onClick="processButtonPressing"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonFriends"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_statistics" />

        <ImageButton
            android:id="@+id/buttonFriends"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_linear_layout"
            android:contentDescription="@string/main_activity_button_friends_description"
            android:enabled="false"
            android:onClick="processButtonPressing"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttonInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_star" />

        <ImageButton
            android:id="@+id/buttonInfo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/main_linear_layout"
            android:contentDescription="@string/main_activity_button_info_description"
            android:enabled="false"
            android:onClick="processButtonPressing"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_question" />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_stat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:background="@color/colorPrimaryBright"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollModes">

        <ImageView
            android:id="@+id/imageCoins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_coins" />

        <ImageView
            android:id="@+id/imageRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageCoins"
            app:srcCompat="@drawable/ic_favourite" />

        <TextView
            android:id="@+id/textCoins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:text="@string/activity_main_coins"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/imageCoins"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:text="@string/activity_main_rating"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/imageRating"
            app:layout_constraintTop_toBottomOf="@id/imageCoins" />

        <LinearLayout
            android:id="@+id/layout_all_km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageRating">

            <TextView
                android:id="@+id/textAllKm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_main_all_km"
                android:textColor="@color/colorText"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/textAllKmDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:text="@string/activity_main_all_time_description"
                android:textColor="@color/colorText"
                android:textSize="18sp" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>