<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textFriendsUsername"
            android:layout_marginStart="12dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/ubuntu"
            android:text="@string/activity_friends_username" />

        <TextView
            android:id="@+id/textFriendsRating"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:fontFamily="@font/ubuntu"
            android:text="@string/activity_friends_rating" />

        <TextView
            android:id="@+id/textFriendsKm"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:gravity="end"
            android:fontFamily="@font/ubuntu"
            android:text="@string/activity_friends_km" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
